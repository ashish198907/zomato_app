<div class="span5 register_div">
  <h4 class="pull-left">Create Account</h4>
  <div class="clearfix"></div>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <table>
        <tr>
          <td colspan="2"><%= devise_error_messages! %></td>
        </tr>
        <tr>
          <td width="40%"><%= f.label :name %></td>
          <td><%= f.text_field :name, :placeholder => "Your Full Name", :autofocus => true %></td>
        </tr>
        <tr>
          <td><%= f.label :email %></td>
          <td><%= f.email_field :email, :placeholder => "Email Id" %></td>
        </tr>
        <tr>
          <td><%= f.label :mobile %></td>
          <td><%= f.text_field :mobile, :placeholder => '10 Digit Phone Number', :maxlength => 10 %></td>
        </tr>
        <tr>
          <td><%= f.label :password %></td>
          <td><%= f.password_field :password %></td>
        </tr>
        <tr>
          <td><%= f.label :password_confirmation, "Confirm Password" %></td>
          <td><%= f.password_field :password_confirmation %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "Register", :class => "btn btn-primary" %></td>
        </tr>
      </table>
  <% end %>
</div>
